<div class="sign-up-form">
	<div class="card-panel">
		<h2 class="center-align">
            Log In
        </h2>

		<div class="row">
			<%= form_for(:login, html: { class: "col s12" }) do |f| %>
				<div class="row">
					<div class="input-field col s12">
						<%= f.email_field :email %>
						<%= f.label :email %>
					</div>
				</div>
        <div class="row">
					<div class="input-field col s12">
						<%= f.password_field :password %>
						<%= f.label :password %>
					</div>
				</div>
       
				<div class="row center-align">
				<%= f.submit "Log In", class: "waves-effect waves-light btn-large white-text" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
